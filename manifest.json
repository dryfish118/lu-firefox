{
    "manifest_version": 2,
    "name": "Lu Trade Helper",
    "version": "0.1.8",
    "description": "Help to catch the best investment production in LU.",
    "applications": {
        "gecko": {
            "id": "dryfish118@163.com",
            "strict_min_version": "48.0",
            "update_url": "https://example.com/updates.json"
        }
    },
    "permissions": [
        "storage", "tabs", "webNavigation", "https://*.lu.com/*"
    ],
    "icons": { "16": "lu.png", "48": "lu.png", "128": "lu.png" },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "background": {
        "scripts": ["jquery.min.js", "background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "lu.png",
        "default_title": "Lu Trade Helper"
    }
}